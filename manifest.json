{
  "manifest_version": 3,
  "name": "2500words",
  "description": "Base Level Extension",
  "version": "1.0",
  "icons": {
    "16": "icons8-pixel-star-16.png",
    "32": "icons8-pixel-star-32.png",
    "48": "icons8-pixel-star-48.png",
    "128": "icons8-pixel-star-128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "contextMenus", "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}